# Application Configuration
PORT=3000
FRONTEND_URL=http://localhost:3000
NODE_ENV=development
LOG_LEVEL=info
DEFAULT_CURRENCY=TRY

# NocoDB Configuration (Required)
# Connection to the local Docker NocoDB instance
NOCODB_API_URL=http://localhost:8080/api/v1
NOCODB_API_TOKEN=your_nocodb_api_token_here

# Database Configuration (Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=fintrack
NC_AUTH_JWT_SECRET=secure_jwt_secret_here

# NocoDB Table IDs (Required)
# Retrieve these from your NocoDB project table settings
BANK_STATEMENTS_TABLE_ID=your_table_id
CATEGORIES_TABLE_ID=your_table_id
ITEMS_TABLE_ID=your_table_id
TAGGING_RULES_TABLE_ID=your_table_id
SUBSCRIPTIONS_TABLE_ID=your_table_id
INSTALLMENTS_PER_RECORD_TABLE_ID=your_table_id
BUDGET_MANAGER_TABLE_ID=your_table_id
USER_SETTINGS_TABLE_ID=your_table_id
SAVINGS_GOALS_TABLE_ID=your_table_id

# NocoDB Constants (Optional)
SALARY_CATEGORY_ID=10
SPENDING_CATEGORY_TYPE=spending

# Firebase Configuration (Required)
FIREBASE_SERVICE_ACCOUNT_KEY_JSON=./service-account.json

# Firebase Client Configuration (Required for Frontend)
REACT_APP_FIREBASE_API_KEY=your_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id
REACT_APP_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM=FinTrack <no-reply@fintrack.app>
